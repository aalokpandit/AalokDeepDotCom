{
  "name": "aalokdeep-monorepo",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspace=main-site",
    "dev:workbench": "npm run dev --workspace=workbench",
    "dev:journal": "npm run dev --workspace=journal",
    "build": "npm run build --workspace=main-site",
    "build:workbench": "npm run build --workspace=workbench",
    "build:journal": "npm run build --workspace=journal",
    "start": "npm run start --workspace=main-site",
    "start:workbench": "npm run start --workspace=workbench",
    "start:journal": "npm run start --workspace=journal",
    "lint": "npm run lint --workspace=main-site",
    "verify:ci": "npm ci",
    "verify:main": "cross-env NEXT_DISABLE_ESLINT=1 npm run build --workspace=main-site",
    "verify:api": "cd apps/main-site/api && npm ci",
    "verify:workbench": "cross-env NEXT_DISABLE_ESLINT=1 NEXT_PUBLIC_API_BASE=https://aalokdeep.com npm run build:workbench",
    "verify:journal": "cross-env NEXT_DISABLE_ESLINT=1 NEXT_PUBLIC_API_BASE=https://aalokdeep.com npm run build:journal",
    "verify:prod": "npm run verify:ci && npm run verify:main && npm run verify:api && npm run verify:workbench && npm run verify:journal",
    "prepare": "husky install",
    "seed:cosmos": "node scripts/seed-cosmos.js",
    "migrate:images": "node scripts/migrate-images-to-blob.js"
  },
  "workspaces": [
        "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@azure/cosmos": "^4.1.1",
    "@azure/storage-blob": "^12.17.0",
    "copy-files-from-to": "^3.0.0",
    "dotenv": "^16.0.0",
    "husky": "^9.0.0",
    "cross-env": "^7.0.3"
  }
}